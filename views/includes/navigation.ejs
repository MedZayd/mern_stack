<header>
	<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
		<div class="container-fluid">
			<a class="navbar-brand" href="/">Shop.com</a>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/' ? 'active' : ''%>"
							aria-current="page"
							href="/"
							>Shop</a
						>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/products' ? 'active' : ''%>"
							href="/products"
							>Products</a
						>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/cart' ? 'active' : ''%>"
							href="/cart"
							>My Cart</a
						>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/order' ? 'active' : ''%>"
							href="/orders"
							>My Orders</a
						>
					</li>
					<li class="nav-item">
						<a
							class="
								nav-link
								<%=
								path
								===
								'/admin/add-product'
								?
								'active'
								:
								''%>
							"
							href="/admin/add-product"
							>Add Product</a
						>
					</li>
					<li class="nav-item">
						<a
							class="nav-link <%= path === '/admin/products' ? 'active' : ''%>"
							href="/admin/products"
							>Admin Product</a
						>
					</li>
				</ul>
			</div>
		</div>
	</nav>
</header>
